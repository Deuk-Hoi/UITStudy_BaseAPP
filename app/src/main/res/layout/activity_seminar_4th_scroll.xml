<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seminar_4th_scroll">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/create_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UIT LAB 회원가입"
                android:layout_centerHorizontal="true"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="70dp"/>

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_below="@id/create_txt"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="50dp"/>

            <EditText
                android:id="@+id/id_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/id"
                android:layout_alignBaseline="@id/id"
                android:hint="ID"
                android:maxLength="13"
                android:enabled="true"
                android:textColorHint="#0000FF"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/id_edit"
                android:layout_alignEnd="@id/id"/>

            <EditText
                android:id="@+id/pass_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/pass"
                android:layout_alignBaseline="@id/pass"
                android:hint="password"
                android:textColorHint="#0000FF"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:inputType="textPassword"/>

            <TextView
                android:id="@+id/Confirm_pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 확인"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/pass"
                android:layout_alignEnd="@id/id"/>

            <EditText
                android:id="@+id/Confirm_pass_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/pass"
                android:layout_alignBaseline="@id/Confirm_pass"
                android:hint="password"
                android:textColorHint="#0000FF"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:inputType="textPassword"/>

            <TextView
                android:id="@+id/Confirm_pass_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Confirm_pass_edit"
                android:layout_alignStart="@id/Confirm_pass_edit"
                android:layout_alignEnd="@id/Confirm_pass_edit"
                android:paddingLeft="5dp"
                android:text=""/>

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:layout_below="@id/Confirm_pass_state"
                android:layout_alignEnd="@id/id"/>

            <EditText
                android:id="@+id/phone_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/pass"
                android:layout_alignBaseline="@id/phone"
                android:hint="phone number"
                android:textColorHint="#0000FF"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:inputType="phone"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginTop="25dp"
                android:layout_below="@id/phone"
                android:layout_alignEnd="@id/id"/>

            <EditText
                android:id="@+id/name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/name"
                android:layout_alignBaseline="@id/name"
                android:hint="name"
                android:textColorHint="#0000FF"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주소"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginTop="25dp"
                android:layout_below="@id/name"
                android:layout_alignEnd="@id/id"/>

            <EditText
                android:id="@+id/address_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/address"
                android:layout_alignBaseline="@id/address"
                android:hint="address"
                android:textColorHint="#0000FF"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/address_edit">

                <Button
                    android:id="@+id/id_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="아이디"
                    android:textStyle="bold"
                    android:background="#0000FF"
                    android:textColor="#FFFFFF"
                    android:paddingHorizontal="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp" />

                <Button
                    android:id="@+id/pass_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:textColor="#0000FF"
                    android:textStyle="italic"
                    android:background="#FFFF00"
                    android:paddingHorizontal="50dp"
                    android:layout_toRightOf="@id/id_btn"
                    android:layout_alignBaseline="@id/id_btn"
                    android:layout_marginTop="30dp"/>
                <Button
                    android:id="@+id/id_pass_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/id_btn"
                    android:layout_alignEnd="@id/pass_btn"
                    android:layout_below="@id/id_btn"
                    android:layout_marginTop="10dp"
                    android:text="아이디와 비밀번호는?"
                    android:textColor="#FFFFFF"
                    android:background="#000000"/>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>