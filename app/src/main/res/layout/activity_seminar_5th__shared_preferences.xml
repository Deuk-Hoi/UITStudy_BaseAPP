<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seminar_5th_SharedPreferences">


    <TextView
        android:id="@+id/create_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UIT LAB 로그인"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_below="@id/create_txt"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:id="@+id/id_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/id"
        android:layout_alignBaseline="@id/id"
        android:hint="ID"
        android:maxLength="13"
        android:enabled="true"
        android:textColorHint="#0000FF"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/id_edit"
        android:layout_alignEnd="@id/id"/>

    <EditText
        android:id="@+id/pass_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/pass"
        android:layout_alignBaseline="@id/pass"
        android:hint="password"
        android:textColorHint="#0000FF"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:inputType="textPassword"/>

    <CheckBox
        android:id="@+id/saveid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/pass_edit"
        android:layout_alignEnd="@id/pass_edit"
        android:layout_marginTop="10dp"
        android:text="아이디 저장"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/saveid">

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="login"
            android:textStyle="bold"
            android:background="#0000FF"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp" />

        <Button
            android:id="@+id/exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="exit"
            android:textColor="#0000FF"
            android:textStyle="italic"
            android:background="#FFFF00"
            android:paddingHorizontal="50dp"
            android:layout_toRightOf="@id/login"
            android:layout_alignBaseline="@id/login"
            android:layout_marginTop="30dp"/>

    </RelativeLayout>

</RelativeLayout>